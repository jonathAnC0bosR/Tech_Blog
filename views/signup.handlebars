<div class="position-relative sngForm text-light">
    <div class="px-2 bg-dark position-absolute top-50 start-50 translate-middle">
        <div>
            <form action="signup" id="sign-form">
                <h2>Signup</h2>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input id="username-sign" class="form-control" type="text">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input id="email-sign" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input id="password-sign" type="password" class="form-control">
                </div>
                <div class="d-flex justify-content-center pb-2">
                    <button type="submit" class="btn btn-light">Signup</button>
                </div>
                <p><a class="link-offset-2 link-underline link-underline-opacity-0" href="/login">Already a member?</a></p>
            </form>
        </div>
    </div>
</div>

<script src="/js/signup.js"></script>