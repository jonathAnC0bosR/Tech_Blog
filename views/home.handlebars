<div class="container d-flex justify-content-center">
    <div class="">
        <button type="button" id="new-post">+ New Post</button>
    </div>
</div>

{{#each posts as |post|}}
    <div class=" d-flex justify-content-center container mt-3 text-center">
        <div class="row align-items-center">
            <div class="col-md-auto border border-dark border-2 rounded-3 p-1">
                <a class="link-dark link-offset-2 link-opacity-50-hover" style="text-decoration:none" href="/editpost/{{post.id}}"><h3> {{post.post_title}} </h3></a>
                <p>Posted on {{format_date post.date_created}}</p>
            </div>
        </div>
    </div>
{{/each}}

<div id="none-div" style="display: none">
    <div class="form container text-center d-flex justify-content-center border border-black border-3 mt-3 text-bg-dark">
    <form action="new-post" class="new-post" id="new-post-form">
        <div class="mb-3">
            <label for="title" class="form-label">Post title</label>
            <input type="projectTitle" class="form-control" id="project-title" >
        </div>
        <div class="mb-3">
            <label for="formControlArea" class="form-label">Post Content</label>
            <textarea class="form-control" id="post-content" rows="5"></textarea>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-light">Submit</button>
        </div>
    </form>
</div>
</div>

<script src="/js/profile.js"></script>